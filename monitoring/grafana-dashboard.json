{
  "dashboard": {
    "id": null,
    "title": "Tithi Platform Monitoring Dashboard",
    "tags": ["tithi", "monitoring", "observability"],
    "style": "dark",
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "System Overview",
        "type": "stat",
        "targets": [
          {
            "expr": "system_cpu_usage_percent",
            "legendFormat": "CPU Usage %"
          },
          {
            "expr": "system_memory_usage_bytes / 1024 / 1024 / 1024",
            "legendFormat": "Memory Usage GB"
          },
          {
            "expr": "system_disk_usage_bytes / 1024 / 1024 / 1024",
            "legendFormat": "Disk Usage GB"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 70},
                {"color": "red", "value": 90}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "HTTP Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total[5m])",
            "legendFormat": "{{method}} {{endpoint}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "yAxes": [
          {
            "label": "Requests/sec",
            "min": 0
          }
        ]
      },
      {
        "id": 3,
        "title": "HTTP Response Time",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, rate(http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "50th percentile"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "yAxes": [
          {
            "label": "Response Time (s)",
            "min": 0
          }
        ]
      },
      {
        "id": 4,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{status_code=~\"5..\"}[5m]) / rate(http_requests_total[5m]) * 100",
            "legendFormat": "5xx Error Rate %"
          },
          {
            "expr": "rate(http_requests_total{status_code=~\"4..\"}[5m]) / rate(http_requests_total[5m]) * 100",
            "legendFormat": "4xx Error Rate %"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "yAxes": [
          {
            "label": "Error Rate %",
            "min": 0
          }
        ]
      },
      {
        "id": 5,
        "title": "Business Metrics",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(bookings_total[5m])",
            "legendFormat": "Bookings/sec"
          },
          {
            "expr": "rate(payments_total[5m])",
            "legendFormat": "Payments/sec"
          },
          {
            "expr": "rate(notifications_total[5m])",
            "legendFormat": "Notifications/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "yAxes": [
          {
            "label": "Operations/sec",
            "min": 0
          }
        ]
      },
      {
        "id": 6,
        "title": "Database Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(database_queries_total[5m])",
            "legendFormat": "Queries/sec"
          },
          {
            "expr": "histogram_quantile(0.95, rate(database_query_duration_seconds_bucket[5m]))",
            "legendFormat": "Query Time P95"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "yAxes": [
          {
            "label": "Queries/sec / Time (s)",
            "min": 0
          }
        ]
      },
      {
        "id": 7,
        "title": "External Service Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(stripe_api_calls_total[5m])",
            "legendFormat": "Stripe API calls/sec"
          },
          {
            "expr": "rate(twilio_api_calls_total[5m])",
            "legendFormat": "Twilio API calls/sec"
          },
          {
            "expr": "rate(sendgrid_api_calls_total[5m])",
            "legendFormat": "SendGrid API calls/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24},
        "yAxes": [
          {
            "label": "API Calls/sec",
            "min": 0
          }
        ]
      },
      {
        "id": 8,
        "title": "Cache Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(cache_hits_total[5m])",
            "legendFormat": "Cache Hits/sec"
          },
          {
            "expr": "rate(cache_misses_total[5m])",
            "legendFormat": "Cache Misses/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24},
        "yAxes": [
          {
            "label": "Cache Operations/sec",
            "min": 0
          }
        ]
      },
      {
        "id": 9,
        "title": "Celery Task Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(celery_tasks_total[5m])",
            "legendFormat": "Tasks/sec"
          },
          {
            "expr": "celery_queue_size",
            "legendFormat": "Queue Size"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32},
        "yAxes": [
          {
            "label": "Tasks/sec / Queue Size",
            "min": 0
          }
        ]
      },
      {
        "id": 10,
        "title": "Active Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "http_requests_active",
            "legendFormat": "Active HTTP Requests"
          },
          {
            "expr": "database_connections_active",
            "legendFormat": "Active DB Connections"
          },
          {
            "expr": "redis_connections_active",
            "legendFormat": "Active Redis Connections"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 32},
        "yAxes": [
          {
            "label": "Connections",
            "min": 0
          }
        ]
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s",
    "schemaVersion": 27,
    "version": 1,
    "links": []
  }
}